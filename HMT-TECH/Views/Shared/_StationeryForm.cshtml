@model HMT_Tech.Models.AddStationery

<form method="post">
    <div class="form-row">
        <div class="col-md-4 mb-3">
            <input type="text" class="form-control" id="validationDefault01" required=""
                   placeholder="Add Stationery" asp-for="Name">

        </div>
        <div class="col-md-3 mb-">
            <input type="number" class="form-control" id="validationDefault02"
                   required="" placeholder="Add Price" asp-for="Price" min="1">
        </div>
        <div class="col-md-3 mb-3">
            <input type="number" class="form-control" id="validationDefault01"
                   required="" placeholder="Add Quantity" asp-for="Quantity" min="1">

        </div>
        <button class="col-md-2 mb-3 btn btn-primary" type="submit">ADD</button>

    </div>
    <!-- <div class="form-group"> -->
</form>