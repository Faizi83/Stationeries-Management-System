@model HMT_Tech.Models.Register

<form action="" method="post" enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group mb-3">
                    <label for="exampleInputText2" class="h5">Full Name</label>
                    <input type="text" class="form-control" id="exampleInputText2" placeholder="Enter Name" required asp-for="Name">
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group mb-3">
                    <label for="exampleInputText006" class="h5">Identity</label>
                    <input type="text" class="form-control" id="exampleInputText006" placeholder="ID Number" asp-for="Identity" readonly>

                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group mb-3">
                    <label for="exampleInputText2" class="h5">Gender</label>
                    <select class="selectpicker form-control" data-style="py-0" asp-for="Gender" required>
                        <option>Male</option>
                        <option>Female</option>

                    </select>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group mb-3">
                    <label for="exampleInputText2" class="h5">Role</label>
                    <select class="selectpicker form-control" data-style="py-0" asp-for="Role" required>
                        <option>Employee</option>
                        <option>Manager</option>
                    </select>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group mb-3">
                    <label for="exampleInputText2" class="h5">Manager</label>
                    <select class="selectpicker form-control" data-style="py-0" asp-for="Manager" required>
                        @foreach (var manager in ViewBag.Managers)
                        {
                            <option>@manager</option>
                        }
                    </select>
                </div>
            </div>
            <div class="col-lg-6">
                <label for="exampleInputText2" class="h5">Add Balance</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" style="color: green; font-weight: bold;">$</span>
                    </div>
                    <input type="number" class="form-control" id="exampleInputText2" placeholder="Add Amount" aria-label="Amount (to the nearest dollar)" asp-for="Balance" required>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group mb-3">
                    <label for="exampleInputText006" class="h5">Email</label>
                    <input type="email" class="form-control" id="exampleInputText006" placeholder="Enter Email" asp-for="Email" required>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group mb-3">
                    <label for="exampleInputText04" class="h5">Password</label>
                    <input type="password" class="form-control" id="exampleInputText04" placeholder="Set Password" asp-for="Password" required>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group mb-3">
                    <label for="exampleInputFile" class="h5">Upload User Image</label>
                    <input type="file" class="form-control" id="exampleInputFile" name="profileimage" accept="image/*" required>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="d-flex flex-wrap align-items-center justify-content-center mt-2">
                    <input type="submit" class="btn btn-primary mr-3" value="Add User">
                    <input type="reset" class="btn btn-primary" value="Reset">
                </div>
            </div>
        </div>
    </div>
</form> 